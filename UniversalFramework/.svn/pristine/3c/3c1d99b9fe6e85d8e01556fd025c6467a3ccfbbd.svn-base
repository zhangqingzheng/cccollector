<ui:composition xmlns="http://www.w3.org/1999/xhtml"
				xmlns:ui="http://java.sun.com/jsf/facelets"
				xmlns:h="http://java.sun.com/jsf/html"
				xmlns:f="http://java.sun.com/jsf/core"
				xmlns:p="http://primefaces.org/ui"
				template="/templateDialogBase.xhtml">
	<ui:define name="title">
		修改密码
	</ui:define>
	
	<ui:define name="implementation">
		<h:form id="modifyPasswordForm">
			<p:messages id="messages" />
			
			<h:panelGrid columns="2">
				<p:outputLabel for="oldPassword" value="原密码:" style="font-weight:bold" />
				<p:password id="oldPassword" value="#{templateBean.oldPassword}" required="true" requiredMessage="原密码为必填项" size="30" validatorMessage="密码长度必须不少于8位，请符合规则！">
					<f:validateLength minimum="8" />
				</p:password>
				
				<p:outputLabel for="newPassword" value="新密码:" style="font-weight:bold" />
				<p:password id="newPassword" value="#{templateBean.newPassword}" required="true" requiredMessage="新密码为必填项" size="30" validatorMessage="密码长度必须不少于8位，请符合规则！">
					<f:validateLength minimum="8" />
				</p:password>
				
				<p:outputLabel for="confirmPassword" value="确认新密码:" style="font-weight:bold" />
				<p:password id="confirmPassword" value="#{templateBean.confirmPassword}" required="true" requiredMessage="请再次输入新密码" size="30" validatorMessage="密码长度必须不少于8位，请符合规则！">
					<f:validateLength minimum="8" />
				</p:password>
				
				<f:facet name="footer">
					<p:commandButton id="saveButton" icon="ui-icon-disk" value="保存" actionListener="#{templateBean.updatePasswordAction}" update="messages" />
				</f:facet>
			</h:panelGrid>
		</h:form>
	</ui:define>
</ui:composition>